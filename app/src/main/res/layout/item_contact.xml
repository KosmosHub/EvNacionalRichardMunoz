<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="12dp"
    android:background="@color/colorSurface">

    <ImageView
        android:id="@+id/imgContactPhoto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_universal"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Contacto"
        android:textColor="@color/colorOnSurface"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgContactPhoto"
        app:layout_constraintTop_toTopOf="@id/imgContactPhoto"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvContactStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ãšltimo mensaje o estado"
        android:textColor="@color/colorSecondaryText"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgContactPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvContactName"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>
