<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Toolbar personalizado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarChat"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="18dp"
        android:background="@color/colorSurface"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgToolbarAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_universal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvChatUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgToolbarAvatar"
            app:layout_constraintTop_toTopOf="@id/imgToolbarAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgToolbarAvatar"/>

        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_universal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lista de mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarChat"
        app:layout_constraintBottom_toTopOf="@id/layoutInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Input de mensaje -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_universal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorAccent" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Escribir mensaje..."
            android:background="@drawable/rounded_input_dark"
            android:padding="12dp"
            android:textColor="@color/colorOnSurface"
            android:textColorHint="@color/colorSecondaryText"
            android:minHeight="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- CAMBIO: Ícono 'ic_menu_send' para el botón de enviar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@color/colorOnPrimary"
            app:fabSize="normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>